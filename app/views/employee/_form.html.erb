<% action = params[:action] == 'new' || params[:action] == 'create' ? 'create' : 'update' %>

<%= form_for @employee, url: {action: action} do |f| %>
  <%= f.label :name, 'Name: ' %>
  	<%= f.text_field :name %> <br />
  <%= f.label :company, 'Company: ' %>
		<%= f.text_field :company %> <br />
  <%= f.label :summary, 'Summary: ' %>
		<%= f.text_field :summary %> <br />
  <%= f.label :role, 'Role: ' %>
		<%= f.text_field :role %> <br />
  <%= f.label :department_id, 'Department: ' %>
    <%= f.collection_select(:department_id, Department.all, :id, :name) %> <br />
  <%= f.label :admission_date, 'Admission Date: ' %>
		<%= f.text_field :admission_date, placeholder: "dd/mm/yyy" %> <br />
  <%= f.label :description, 'Description: ' %>
		<%= f.text_field :description %> <br />
  <%= f.submit action.camelize %>
<% end %>